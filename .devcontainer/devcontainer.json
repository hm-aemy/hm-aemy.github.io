// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/jekyll
{
	"name": "Jekyll",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "ubuntu:25.10",

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	"forwardPorts": [
	 	// Jekyll server
	 	4000,
	 	// Live reload server
	 	35729
	],

	"postCreateCommand": "apt update && DEBIAN_FRONTEND='noninteractive' TZ='Europe/London' apt install -y ruby-dev build-essential  locales && echo 'en_US.UTF-8 UTF-8' > /etc/locale.gen && locale-gen en_US.UTF-8 && gem install bundler && bundle install",

	"postAttachCommand": "bundle exec jekyll s --livereload",

	"containerEnv": {
		"LANG": "en_US.UTF-8",
		"LC_ALL": "en_US.UTF-8"
	}
}
